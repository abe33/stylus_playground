.overlay
  z-index 100
  display none
  fixed(0, 0, 0, 0)

  &.visible
    display block

.modal
  background base2
  min-width 600px
  display none
  z-index 101
  transform translate(-50%, -50%)
  overflow hidden
  padding large_horizontal_padding
  border-radius 20px
  absolute(50%, 50%)

  &.visible
    display block

  canvas
    absolute()
    opacity 0.65
    z-index -1

  .dark &, &.dark
    background base02

  .modal-close-button
    absolute(5px, null, null, 5px)
